{
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/": ["src/*"]
    },

    "types": ["bun-types"],

    "lib": ["esnext", "dom", "dom.iterable"],
    "module": "esnext",
    "target": "esnext",

    "moduleDetection": "force",
    "moduleResolution": "bundler",

    "noEmit": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
