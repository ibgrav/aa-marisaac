{
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules", "dist"],

  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",

    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true
  }
}
