{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["**/*.ts", "**/*.svelte"],
  "exclude": ["node_modules", "dist"],

  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "useDefineForClassFields": true
  }
}
